<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/room_adding_header_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Header:"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="..."
            android:textColorHint="@color/colorAccent"
            app:boxBackgroundMode="none"
            app:hintTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/room_adding_header_txt"
                style="@style/AppTheme_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_under_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/room_adding_header_layout"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/room_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_under_header"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/room_settings_of_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Private:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/room_adding_access_checkBox"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/room_settings_of_synchronization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Synchronize with statistics:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/room_adding_synchronization_checkBox"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/room_settings_of_max_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Max number of members:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/room_settings_of_discipline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Discipline:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                style="@style/AppTheme_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="3 x 3"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_under_settings"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/room_settings_layout"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/room_adding_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_under_settings"
        android:layout_marginBottom="96dp"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Description:"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="..."
            android:textColorHint="@color/colorAccent"
            app:boxBackgroundMode="none"
            app:hintTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_adding_text_txt"
                style="@style/AppTheme_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="true"
                android:gravity="start"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/room_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="20dp"
        android:visibility="visible"
        app:borderWidth="0dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</RelativeLayout>