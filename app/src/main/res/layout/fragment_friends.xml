<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".fragments.mainMenuFragments.peopleFragments.friendsFragments.FriendsMainFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_in_main_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_in_main_friends"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/BlackDrawerIconStyle.DrawerIconStyle"
            android:visibility="visible"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="_"
            app:titleTextColor="#000000" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_friends_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:visibility="visible"
            app:tabBackground="@color/colorBackground"
            android:backgroundTint="@color/colorBackground"
            app:tabMode="fixed"
            app:tabIndicatorFullWidth="true"
            app:tabGravity="fill" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_friends_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>