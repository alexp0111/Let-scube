<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bar"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="some settings and back button"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:id="@+id/divider_tmp"
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@id/divider_tmp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chronometer_solo"
            android:text="00:000"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="80dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+2" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="DNF" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rooms_solo_start_btn"
                android:backgroundTint="@color/colorAccent"
                android:layout_width="180dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="80dp"
                android:text="start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rooms_solo_stop_btn"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginHorizontal="10dp"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="stop" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>